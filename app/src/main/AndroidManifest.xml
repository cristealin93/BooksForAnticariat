<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anticariat.friendlybooks">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FriendlyBooks">

        <activity
            android:name="com.anticariat.friendlybooks.ui.activites.DashBoardActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.anticariat.friendlybooks.ui.activites.UserProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SlashTheme" />
        <activity
            android:name="com.anticariat.friendlybooks.ui.activites.ForgotPasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SlashTheme" />
        <activity android:name="com.anticariat.friendlybooks.ui.activites.BaseActivity" />
        <activity
            android:name="com.anticariat.friendlybooks.ui.activites.RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SlashTheme" />
        <activity
            android:name="com.anticariat.friendlybooks.ui.activites.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SlashTheme" />
        <activity
            android:name="com.anticariat.friendlybooks.ui.activites.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.anticariat.friendlybooks.ui.activites.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SlashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>